<?xml version="1.0" encoding="utf-8"?>
    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/zero"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="11" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seven"
            android:id="@+id/sevenb"
            android:layout_row="1"
            android:hapticFeedbackEnabled="true"
            android:layout_column="0"
            android:textColor="@color/colorText"
            android:background="@color/colorPrimary"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eight"
            android:id="@+id/eightb"
            android:layout_row="1"
            android:hapticFeedbackEnabled="true"
            android:layout_column="1"
            android:textColor="@color/colorText"
            android:background="@color/colorPrimary"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nine"
            android:id="@+id/nineb"
            android:layout_row="1"
            android:hapticFeedbackEnabled="true"
            android:layout_column="2"
            android:textColor="@color/colorText"
            android:background="@color/colorPrimary"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plus"
            android:id="@+id/plusb"
            android:layout_row="1"
            android:hapticFeedbackEnabled="true"
            android:layout_column="3"
            android:textColor="@color/colorText"
            android:background="@color/colorPrimary"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/four"
            android:id="@+id/fourb"
            android:layout_row="2"
            android:hapticFeedbackEnabled="true"
            android:layout_column="0"
            android:textColor="@color/colorText"
            android:background="@color/colorPrimary"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/five"
            android:id="@+id/fiveb"
            android:layout_row="2"
            android:hapticFeedbackEnabled="true"
            android:layout_column="1"
            android:textColor="@color/colorText"
            android:background="@color/colorPrimary"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/six"
            android:id="@+id/sixb"
            android:layout_row="2"
            android:hapticFeedbackEnabled="true"
            android:layout_column="2"
            android:textColor="@color/colorText"
            android:background="@color/colorPrimary"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/minusb"
            android:layout_row="2"
            android:hapticFeedbackEnabled="true"
            android:layout_column="3"
            android:textColor="@color/colorText"
            android:background="@color/colorPrimary"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/one"
            android:id="@+id/oneb"
            android:layout_row="3"
            android:hapticFeedbackEnabled="true"
            android:layout_column="0"
            android:textColor="@color/colorText"
            android:background="@color/colorPrimary"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/two"
            android:id="@+id/twob"
            android:layout_row="3"
            android:hapticFeedbackEnabled="true"
            android:layout_column="1"
            android:textColor="@color/colorText"
            android:background="@color/colorPrimary"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/three"
            android:id="@+id/threeb"
            android:layout_row="3"
            android:hapticFeedbackEnabled="true"
            android:layout_column="2"
            android:textColor="@color/colorText"
            android:background="@color/colorPrimary"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multiply"
            android:id="@+id/multiplyb"
            android:layout_row="3"
            android:hapticFeedbackEnabled="true"
            android:layout_column="3"
            android:textColor="@color/colorText"
            android:background="@color/colorPrimary"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/equal"
            android:id="@+id/equalb"
            android:layout_row="4"
            android:hapticFeedbackEnabled="true"
            android:layout_column="0"
            android:textColor="@color/colorText"
            android:background="@color/colorPrimary"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:id="@+id/zerob"
            android:layout_row="4"
            android:hapticFeedbackEnabled="true"
            android:layout_column="1"
            android:textColor="@color/colorText"
            android:background="@color/colorPrimary"/>/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear"
            android:id="@+id/clearb"
            android:layout_row="4"
            android:hapticFeedbackEnabled="true"
            android:layout_column="2"
            android:textColor="@color/colorText"
            android:background="@color/colorPrimary"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/devide"
            android:id="@+id/devideb"
            android:layout_row="4"
            android:layout_column="3"
            android:hapticFeedbackEnabled="true"
            android:padding="3dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorText"/>
    </GridLayout>
